source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.0'
# Use mySQL2 as the database for Active Record
gem 'mysql2'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

# https://rubygems.org/gems/bootstrap-sass
gem 'bootstrap-sass', '~> 3.3.3'
gem 'autoprefixer-rails'

# assets for bootstrap-select. More: https://github.com/Slashek/bootstrap-select-rails
gem 'bootstrap-select-rails', '~> 1.6.3'

# Devise is a flexible authentication solution for Rails based on Warden. More: https://github.com/plataformatec/devise
gem 'devise'

# Figaro was written to make it easy to securely configure Rails applications. More: https://github.com/laserlemon/figaro
gem "figaro"

# marc is a ruby library for reading and writing MAchine Readable Cataloging (MARC). More: https://github.com/ruby-marc/ruby-marc/
gem 'marc'

# A Scope & Engine based, clean, powerful, customizable and sophisticated paginator for modern web app frameworks and ORMs. More: https://github.com/amatsuda/kaminari
gem 'kaminari'

# Capybara helps you test web applications by simulating how a real user would interact with your app. More: https://github.com/jnicklas/capybara
gem 'capybara'

# Whenever is a Ruby gem that provides a clear syntax for writing and deploying cron jobs. More: https://github.com/javan/whenever
gem 'whenever', :require => false

# BreadcrumbsOnRails is a simple Ruby on Rails plugin for creating and managing a breadcrumb navigation for a Rails project. More: http://simonecarletti.com/code/breadcrumbs_on_rails/
gem "breadcrumbs_on_rails"

# Nokogiri (鋸) is an HTML, XML, SAX, and Reader parser with XPath and CSS selector support. More: https://github.com/sparklemotion/nokogiri
gem 'nokogiri', '~> 1.6.6.2'

# Font-awesome-rails provides the Font-Awesome web fonts and stylesheets as a Rails engine for use with the asset pipeline. More: https://github.com/bokmann/font-awesome-rails
gem "font-awesome-rails"

# Test your ActionMailer and Mailer messages with Capybara. More: https://github.com/dockyard/capybara-email
gem 'capybara-email', '~> 2.4.0'

# The libxml gem provides Ruby language bindings for GNOME’s Libxml2 XML toolkit. More: http://xml4r.github.io/libxml-ruby/
gem 'libxml-ruby', '~> 2.8.0'

group :test, :development do
  gem 'cucumber-rails', :require => false
  # database_cleaner is not required, but highly recommended
  gem 'database_cleaner'
	gem "rspec"
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'

  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
end

