<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-signin'}) do |f| %>
  <%= devise_error_messages! %>

  <%= render 'users/shared/logo' %> 

  <div class="vspace4"></div>

  <h2 class="form-signin-heading">Přihlášení knihovníka</h2>

  <div class="vspace4"></div>

  <div class="form-group has-feedback">
    <%= f.label :email, class:"control-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email" %>
    <i class="glyphicon glyphicon-user form-control-feedback"></i>
  </div>

  <div class="vspace2"></div>

  <div class="form-group has-feedback">
    <%= f.label :heslo, class:"control-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Heslo" %>
    <i class="glyphicon glyphicon-lock form-control-feedback"></i>
  </div>

  <div class="vspace3"></div>

  <% if devise_mapping.rememberable? -%>
    <div class="field pull-left">
      <%= f.check_box :remember_me %>
      <%= f.label :Zapamatovat %>
    </div>
  <% end -%>

  <div class="actions  pull-right">
    <%= f.submit "Přihlásit", class:"pull-left btn btn-md btn-success" %>
  </div>
<% end %>

 <div class="vspace6"></div>
<hr style="border-color: #818181">

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Zapomněli jste heslo?", new_password_path(resource_name) %><br />
<% end -%>





