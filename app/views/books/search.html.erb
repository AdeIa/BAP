<h1> Nalezené výsledky </h1>
<div class="vspace5"></div>
<% if @records.nil? || @records.empty? %>
<p class="color-warning"><strong>Nenalezeny žádné výsledky.</strong></p>

<% else %>
<table id="sample-table-1" class="table table-striped table-bordered table-hover">

    <thead>
      <tr>
        <th>Evidenční číslo</th>        
        <th>Číslo zázn.</th>        
        <th>Autor</th>        
        <th>Titul</th>        
        <th>ISBN</th>        
        <th>Vydání</th>        
        <th>Žánr</th>         
      </tr>
    </thead>

    <tbody>
      

    <% @records.each do |record| %>
      <tr>  
        <td><%= record.kii_number %></td>
        <td><%= record.czu_number %></td>
        <td>
            <%= link_to books_search_path(:category => "Autor", :search => record.author_name) do %>
                <%= record.author_name %>
          <% end %>
        </td>
        <td>
          <%= link_to books_detail_path(:id => record.czu_number) do %>
            <%= record.name %>
          <% end %>
        </td>
        <td><%= record.isbn %></td>
        <td><%= record.edition %></td>
        <td><%= record.form %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<% if !@similary_records.empty? %>
<h2> Podobné výsledky </h2>
<div class="vspace5"></div>
<table id="sample-table-1" class="table table-striped table-bordered table-hover">

    <thead>
      <tr>
        <th>Číslo zázn.</th>        
        <th>Autor</th>        
        <th>Titul</th>        
        <th>ISBN</th>        
        <th>Vydání</th>        
        <th>Žánr</th>         
      </tr>
    </thead>

    <tbody>
      

  <% @similary_records.each do |record| %>
      <tr>  
        <td><%= record.czu_number %></td>
        <td>
            <%= link_to books_search_path(:category => "Autor", :search => record.author_name) do %>
                <%= record.author_name %>
          <% end %>
        </td>
        <td>
          <%= link_to books_detail_path(:id => record.czu_number) do %>
            <%= record.name %>
          <% end %>
        </td>
        <td><%= record.isbn %></td>
        <td><%= record.edition %></td>
        <td><%= record.form %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>